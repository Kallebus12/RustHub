@using EPiServer
@using EPiServer.Web.Routing
@inject IUrlResolver UrlResolver
@using RustHub.Components.Blocks.VideoBlock
@model VideoBlock

<div class="container-fluid text-center">
    <h2 class="VideoTitle">@Model.Title</h2>

    <!-- Video Container -->
    <div class="ratio ratio-16x9">
        @Html.Raw(Model.Content)
    </div>

    <!-- Blue Line and Description -->
    <div class="blueLine mx-auto w-100" style="max-width: calc(100% - 100px);"></div>
    <p class="mt-3">@Model.Description</p>
</div>

